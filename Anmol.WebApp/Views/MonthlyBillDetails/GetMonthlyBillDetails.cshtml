<script type="text/javascript">
    $(document).ready(function () {
        $("#navbarNav li.active").removeClass("active");
        $("#MonthlyBill").addClass("active");
        $(".list-unstyled li").removeClass("active");
        $(".list-unstyled #MonthlyBill").addClass("active");

     //   BindGrid();


    });


     function BindGrid() {
            var MonthlyBillInfoTable;
         if (MonthlyBillInfoTable != undefined) {
             MonthlyBillInfoTable.destroy();
            }

            /*DeliveryHisInfoTable = $('#DeliveryHistoryInfo').DataTable();*/
         MonthlyBillInfoTable = $('#MonthlyBillData').DataTable({
                /*'destroy': true,*/
            'ajax': {
                "type": "GET",
                "url": '@Url.Action("GetMonthlyBill", "MonthlyBillDetails")',

                "dataSrc": function (e) {
                    return e;
                }
             },
             'responsive': true,
                'order': [[0, "asc"]],
                'columns': [
                    { "data": "SrNO", "orderable": true },
                    {
                        "data": "Month", "orderable": true,
                    },
                    {
                        "data": "TotalQty", "orderable": true,
                    },
                    {
                        "data": "Amount", "orderable": true,
                    },
            ]
           });


        }
</script>

